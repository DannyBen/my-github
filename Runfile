require './src/site'

title   "My GitHub"
summary "Generate HTML code for github.dannyben.com"

help   "Start a local preview server"
action :serve, :s do
  exec "httpme site"
end

help   "Generate the static site"
action :generate, :g do
  site = Site.new
  site.reset
  site.generate_pages
  site.generate_index
end
